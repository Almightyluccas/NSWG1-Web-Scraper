{
  "name": "NSWG1-Web-Scraper",
  "description": "Web scraper for game panel monitoring",
  "repository": "https://github.com/yourusername/NSWG1-Web-Scraper",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/jontewks/puppeteer-heroku-buildpack"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    },
    "web": {
      "quantity": 0
    }
  },
  "env": {
    "NODE_ENV": "production",
    "PUPPETEER_EXECUTABLE_PATH": "/app/.apt/usr/bin/google-chrome",
    "HH_USERNAME": {
      "required": true
    },
    "HH_PASSWORD": {
      "required": true
    },
    "ENCRYPTION_KEY": {
      "required": true
    },
    "ENCRYPTION_IV": {
      "required": true
    },
    "DB_HOST": {
      "required": true
    },
    "DB_PORT": {
      "required": true
    },
    "DB_USER": {
      "required": true
    },
    "DB_PASSWORD": {
      "required": true
    },
    "DB_NAME": {
      "required": true
    }
  }
}